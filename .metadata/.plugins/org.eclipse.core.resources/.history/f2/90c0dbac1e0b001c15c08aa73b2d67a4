#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>//biblioteca

int main(void)
{

	setbuf(stdout, NULL);

	int opcion;
	int numeroUno;
	int numeroDOS;
	int flagOperandoUno;
	int flagOperandoDOS;

	flagOperandoUno = 1;
	flagOperandoDOS = 1;

	do
	{
		if (flagOperandoUno == 1)
		{
			printf("1. Ingresar 1er operando A=x\n");
		}
		else
		{
			printf("1. Ingresar 1er operando A=%d\n", numeroUno);
		}
		if (flagOperandoDOS == 1)
		{
			printf("2. Ingresar 2do operando B=x\n");
		}
		else
		{
			printf("2. Ingresar 1do operando B=%d\n", numeroDOS);
		}

		printf("3. Calcular todas las operaciones
						\n");
						printf("4. Salir\n");
						printf("Ingrese una opcion: ");
						scanf("%d", &opcion);
						switch (opcion)
						//int - char
						{
						case 1:
							printf("\n Ingrese el primer operando: ");
							scanf("%d", &numeroUno);
							flagOperandoUno = 0;
							break;

						case 2:
							printf("\n Ingrese el 2do operando: ");
							scanf("%d", &numeroDOS);
							flagOperandoDOS = 0;
							break;
						case 3:
							printf("Estoy modificando\n");
							break;
						case 4:
							printf("Gracias por usar gerapp\n");
							break;
						}
						
					}
					while (opcion != 4);
					
					return 0;
				}
				
