#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
float numeroFlotante(float);
int main(void)
{
	setbuf(stdout, NULL);

	float numeroFloat;
	numeroFloat = 10.8;

	numeroFloat = numeroFlotante(numeroFloat);

	printf("numero float: %.2f", numeroFloat);
	return EXIT_SUCCESS;
}
float numeroFlotante(float numero)
{

	float resultado;
	resultado = numero;

	return resultado;
	
}
