#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>

int PedirEntero(void);
//void mostarNumeroEntero();
int main(void)
{
	setbuf(stdout, NULL);

	int numeroIngresado;
	numeroIngresado = PedirEntero();

	printf("numero ingreado : %d", numeroIngresado);

	return EXIT_SUCCESS;
}

int PedirEntero(void)
{
	int unNumero;
	printf("ingresar numero: ");
	scanf("%d", &unNumero);
	return unNumero;
}
