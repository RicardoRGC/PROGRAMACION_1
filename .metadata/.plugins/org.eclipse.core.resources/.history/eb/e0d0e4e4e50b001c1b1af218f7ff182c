#include <stdio.h>
#include <stdlib.h>
#include <ctype.h>
#include "tp1bibliotecaP.h"

int ValidarNumero(char mensaje[], int min, int max)
{
	int unNumero;
	printf("%s ", mensaje);
	scanf("%d", &unNumero);
	while (unNumero < min || unNumero > max)
	{
		printf("%s ", mensaje);
		scanf("%d", &unNumero);
	}
	
	return unNumero;
}
